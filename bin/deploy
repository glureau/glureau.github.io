#!/usr/bin/env sh

# Run this script to deploy the app to Github Pages.

RED='\033[0;31m'

# Exit if any subcommand fails.
set -e

# Check if any changes are uncommited.
if ! git diff-files --quiet --ignore-submodules --
then
  echo >&2 "${RED}Please commit your changes first before deploying!"
  git diff-files --name-status -r --ignore-submodules -- >&2
  exit 0
fi

echo "Started deploying"

mkdir deployment-in-progress
cd deployment-in-progress
remoteUrl=$(git config --get remote.origin.url)
git clone --depth=1 --branch=develop $remoteUrl .

# Checkout master branch.
if [ `git branch | grep master` ]
then
  git branch -D master
fi
git checkout -b master

# Build site.
bundle install
yarn install --modules-folder ./_assets/yarn
bundle exec jekyll build

# Delete and move files.
find . -maxdepth 1 ! -name '_site' ! -name '.git' ! -name '.gitignore' ! -name 'repos' -exec rm -rf {} \;
mv _site/* .
rm -R _site/

# Push to master.
git add -fA
git commit --allow-empty -m "$(git log -1 --pretty=%B) [ci skip]"
git push -f -q origin master

# Move back to previous branch.
cd ..
rm -Rf deployment-in-progress

echo "Deployed Successfully!"

exit 0
